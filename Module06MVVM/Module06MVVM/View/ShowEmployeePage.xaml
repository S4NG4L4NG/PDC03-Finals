<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module06MVVM.View.ShowEmployeePage"
             BackgroundColor="#e8f5e9">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <!-- Title and Logo -->
            <StackLayout HorizontalOptions="Center" Spacing="10">
                <Image Source="leaf_logo.png" HeightRequest="100" WidthRequest="100" />
                <Label Text="Employee Records" TextColor="Green" FontAttributes="Bold" FontSize="Large"/>
            </StackLayout>

            <!-- Grid Header -->
            <Grid Padding="10" BackgroundColor="#e8f5e9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Action Code" Grid.Row="0" Grid.Column="0" TextColor="Green" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Label Text="Description" Grid.Row="0" Grid.Column="1" TextColor="Green" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Label Text="Impact Level" Grid.Row="0" Grid.Column="2" TextColor="Green" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Label Text="Category" Grid.Row="0" Grid.Column="3" TextColor="Green" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Label Text="Frequency" Grid.Row="0" Grid.Column="4" TextColor="Green" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Grid>

            <!-- ListView for Data -->
            <ListView x:Name="lstData" HasUnevenRows="True" ItemSelected="lsdata_ItemSelected" BackgroundColor="#e8f5e9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BorderColor="Green" CornerRadius="10" Padding="10" Margin="5" BackgroundColor="White">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding ActionCode}" Grid.Row="0" Grid.Column="0" TextColor="DarkGreen"/>
                                    <Label Text="{Binding Description}" Grid.Row="0" Grid.Column="1" TextColor="DarkGreen"/>
                                    <Label Text="{Binding ImpactLevel}" Grid.Row="0" Grid.Column="2" TextColor="DarkGreen"/>
                                    <Label Text="{Binding Category}" Grid.Row="0" Grid.Column="3" TextColor="DarkGreen"/>
                                    <Label Text="{Binding Frequency}" Grid.Row="0" Grid.Column="4" TextColor="DarkGreen"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Add New Record Button -->
            <Button Text="Add New Record" Clicked="btnAddRecord" BackgroundColor="Green" TextColor="White" CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
